# GCP Cloud SQL PostgreSQL 연결 설정
# 아래 값들을 실제 GCP Console에서 확인한 값으로 변경하세요

# ===== GCP Cloud SQL 정보 (GCP Console에서 확인) =====

# 1. GCP Console > SQL > 인스턴스 선택 > 개요
# 인스턴스 이름: postgresql-479201
# 공개 IP 주소: (여기에 IP 입력 예: 34.64.123.456)
GCP_SQL_HOST="YOUR_PUBLIC_IP_HERE"

# 2. 데이터베이스 사용자 정보
# 기본값은 postgres이지만, 별도 사용자를 만들었다면 그 이름 입력
GCP_SQL_USER="postgres"

# 3. 데이터베이스 비밀번호
# 인스턴스 생성 시 설정한 비밀번호 또는 사용자 비밀번호
GCP_SQL_PASSWORD="YOUR_PASSWORD_HERE"

# 4. 데이터베이스 이름
# 기본값은 postgres이지만, vintee 또는 townin-db 등 생성한 DB 이름 입력
GCP_SQL_DATABASE="vintee"

# 5. 포트 (기본값)
GCP_SQL_PORT="5432"

# ===== 완성된 연결 문자열 (위 정보로 자동 구성) =====

# Prisma용 DATABASE_URL (Connection Pooling)
DATABASE_URL="postgresql://${GCP_SQL_USER}:${GCP_SQL_PASSWORD}@${GCP_SQL_HOST}:${GCP_SQL_PORT}/${GCP_SQL_DATABASE}?pgbouncer=true&connection_limit=1"

# Prisma용 DIRECT_URL (마이그레이션용)
DIRECT_URL="postgresql://${GCP_SQL_USER}:${GCP_SQL_PASSWORD}@${GCP_SQL_HOST}:${GCP_SQL_PORT}/${GCP_SQL_DATABASE}"

# ===== 또는 직접 입력 =====
# GCP Console에서 복사한 전체 연결 문자열이 있다면 아래에 직접 입력:
# DATABASE_URL="postgresql://postgres:password@34.64.123.456:5432/vintee?pgbouncer=true&connection_limit=1"
# DIRECT_URL="postgresql://postgres:password@34.64.123.456:5432/vintee"

