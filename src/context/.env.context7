# Context7 Configuration
CONTEXT7_PROJECT_NAME=ProTask
CONTEXT7_PROJECT_VERSION=1.0.0

# Feature Flags
CONTEXT7_FEATURE_EXPERIENCES=false
CONTEXT7_FEATURE_BOOKINGS=false
CONTEXT7_FEATURE_REVIEWS=false
CONTEXT7_FEATURE_HOSTS=false
CONTEXT7_FEATURE_TASKS=true
CONTEXT7_FEATURE_PROJECTS=true

# Security
CONTEXT7_SECURITY_CSRF_ENABLED=true
CONTEXT7_SECURITY_RATE_LIMIT_ENABLED=true
CONTEXT7_SECURITY_CORS_ENABLED=true
CONTEXT7_SECURITY_CORS_ORIGINS=http://localhost:3000

# Logging
CONTEXT7_LOGGING_ENABLED=true
CONTEXT7_LOGGING_LEVEL=info

# Database
CONTEXT7_DB_PROVIDER=postgresql
CONTEXT7_DB_ORM=prisma

# API
CONTEXT7_API_BASE_PATH=/api
CONTEXT7_API_VERSION=v1