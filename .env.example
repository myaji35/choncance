# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# Clerk Authentication
# Get your keys from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_publishable_key_here
CLERK_SECRET_KEY=your_secret_key_here

# Clerk Routes
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/login
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/signup

# Clerk Redirect Settings (Latest Recommendations)
# Use FALLBACK instead of AFTER_SIGN_IN_URL (deprecated)
# FALLBACK: Only used when no other redirect URL is available
# FORCE: Always redirects to this URL (use with caution)
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/

# DO NOT set FORCE_REDIRECT_URL unless you want to override all redirects
# If set, users will ALWAYS go to this URL, even when visiting protected pages
# NEXT_PUBLIC_CLERK_SIGN_IN_FORCE_REDIRECT_URL=/
# NEXT_PUBLIC_CLERK_SIGN_UP_FORCE_REDIRECT_URL=/

# Deprecated (do not use):
# NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
# NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/choncance"

# Toss Payments
NEXT_PUBLIC_TOSS_CLIENT_KEY=test_ck_***
TOSS_SECRET_KEY=test_sk_***

# Google Cloud Storage (for image uploads)
GCS_BUCKET_NAME=choncance-images
GCS_PROJECT_ID=your-gcp-project-id
# For local development, set GOOGLE_APPLICATION_CREDENTIALS to path of service account JSON
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Application
NEXT_PUBLIC_BASE_URL=http://localhost:3010

# Email Service (choose one: sendgrid, resend, nodemailer)
EMAIL_SERVICE=sendgrid

# SendGrid (if using)
SENDGRID_API_KEY=SG.***

# Resend (if using)
RESEND_API_KEY=re_***

# Nodemailer SMTP (if using)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Email sender info
EMAIL_FROM=noreply@choncance.com
EMAIL_FROM_NAME=ChonCance
