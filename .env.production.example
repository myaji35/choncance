# Vercel 환경 변수 설정 예시
# Vercel Dashboard > Settings > Environment Variables에 복사해서 사용하세요

# ===== 필수 환경 변수 =====

# Database (GCP Cloud SQL PostgreSQL)
# pgbouncer 모드로 연결 (connection pooling)
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?pgbouncer=true&connection_limit=1"
# Direct 연결 (마이그레이션 용)
DIRECT_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE"

# Clerk Authentication (Production Keys)
# Get from: https://dashboard.clerk.com > API Keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_live_YOUR_PUBLISHABLE_KEY"
CLERK_SECRET_KEY="sk_live_YOUR_SECRET_KEY"

# Toss Payments (Production Keys)
# Get from: https://developers.tosspayments.com
NEXT_PUBLIC_TOSS_CLIENT_KEY="live_ck_YOUR_CLIENT_KEY"
TOSS_SECRET_KEY="live_sk_YOUR_SECRET_KEY"

# Google Gemini AI
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY="YOUR_GEMINI_API_KEY"

# Admin Authentication
ADMIN_PASSWORD_HASH="$2b$10$/2LriKXhyrDcDzRgC9TzeOmB5X2tY4AIUBvIeW4tH0eenTOcWVOte"
# IMPORTANT: Change this to a strong random string in production
JWT_SECRET="CHANGE_THIS_TO_STRONG_RANDOM_STRING"

# ===== 선택 환경 변수 =====

# API URL (자동으로 Vercel 도메인으로 설정됨)
# NEXT_PUBLIC_API_URL="https://your-domain.vercel.app"

# OpenAI API (AI 챗봇 자연어 처리용 - 선택사항)
# OPENAI_API_KEY="sk-YOUR_OPENAI_KEY"

# Kakao AlimTalk (알림톡 - 선택사항)
# KAKAO_ALIMTALK_ENABLED="true"
# KAKAO_ALIMTALK_API_KEY="YOUR_KAKAO_REST_API_KEY"
# KAKAO_ALIMTALK_SENDER_KEY="YOUR_SENDER_KEY"

# Supabase (사용하는 경우만)
# NEXT_PUBLIC_SUPABASE_URL="https://YOUR_PROJECT.supabase.co"
# NEXT_PUBLIC_SUPABASE_ANON_KEY="YOUR_ANON_KEY"
